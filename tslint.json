{
  "extends": [
    "tslint:recommended",
    "tslint-config-airbnb",
    "tslint-react",
    "tslint-blueprint",
    "tslint-sonarts",
    "rxjs-tslint-rules",
    "tslint-config-prettier" // It disables all TSLint formatting related rules, as well as for tslint-react and tslint-eslint-rules.
  ],
  "rules": {
    "prettier": true,
    "member-access": false,
    "interface-name": false,
    "jsx-boolean-value": false,
    "semicolon": false,
    "no-console": false,
    "interface-over-type-literal": false,
    "import-name": false,
    "object-shorthand-properties-first": false,
    "no-commented-code": false,
    "variable-name": false,
    "member-ordering": false,
    "object-literal-sort-keys": false,
    "jsx-no-lambda": false,
    "no-string-literal": false,
    "prefer-array-literal": [true, { "allow-type-parameters": true }]
  },
  "rulesDirectory": [
    "node_modules/tslint-eslint-rules/dist/rules",
    "tslint-plugin-prettier"
  ],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  }
}
